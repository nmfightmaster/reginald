{
  "name": "reginald",
  "private": true,
  "packageManager": "pnpm@10.15.1",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm --filter @reginald/desktop run tauri dev",
    "build": "pnpm --filter @reginald/desktop run tauri build",
    "lint": "eslint --no-error-on-unmatched-pattern \"apps/**/*.{ts,tsx,js,jsx}\" \"packages/**/*.{ts,tsx,js,jsx}\"",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc -p apps/desktop/tsconfig.json --noEmit"
  },
  "dependencies": {
    "@eslint/js": "^9.35.0",
    "eslint": "^9.35.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "prettier": "^3.6.2",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.44.0"
  }
}
